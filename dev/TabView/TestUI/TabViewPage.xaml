<local:TestPage
    x:Class="MUXControlsTestApp.TabViewPage"
    x:Name="TabViewTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <controls:TabView x:Name="Tabs" TabWidthMode="Fixed">
                <controls:TabView.Items>

                    <controls:TabViewItem Icon="Home" Header="Home">
                        <TextBlock Padding="16">Home text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Shop" Header="Shop">
                        <TextBlock Padding="16">Shop text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Emoji" Header="Emoji">
                        <TextBlock Padding="16">Emoji text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Audio" Header="A somewhat longer header than usual">
                        <TextBlock Padding="16">Long name text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Video" Header="1">
                        <TextBlock Padding="16">Video text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Video" Header="2">
                        <TextBlock Padding="16">Video text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Video" Header="3">
                        <TextBlock Padding="16">Video text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Video" Header="4">
                        <TextBlock Padding="16">Video text</TextBlock>
                    </controls:TabViewItem>

                    <controls:TabViewItem Icon="Video" Header="5">
                        <TextBlock Padding="16">Video text</TextBlock>
                    </controls:TabViewItem>

                </controls:TabView.Items>
            </controls:TabView>
        </StackPanel>
    </Grid>
</local:TestPage>
